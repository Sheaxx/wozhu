/* pages/mine/order.wxss */
page {
  background: rgba(126, 122, 122, 0.11);
}
.title {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: rgb(97, 94, 94);
  background: #fff;
  font-size: 34rpx;
  position: fixed;
  z-index: 999;
  border-bottom: 2rpx solid rgba(97, 94, 94, 0.137);
}
.topBar {
  height: 100rpx;
  width: 400rpx;
  padding: 0 175rpx;
  display: flex;
  line-height: 100rpx;
  position: fixed;
  top: 100rpx;
  z-index: 997;
  background: #F0F0F0;
  font-size: 32rpx;
}
.topBar view {
  width: 200rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.7);
  position: relative;
}
.tab-active {
  border-bottom: 10rpx solid #ECBC28;
  border-radius: 10rpx;
  color: #000!important;
  font-weight: 600;
}
.content {
  margin-top: 230rpx;
  height: 400rpx;
}